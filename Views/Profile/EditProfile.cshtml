                <a asp-controller="Home" asp-action="Index" class="btn btn-dark my-2 p-2 px-4">Back</a>
            </td>
            <td colspan="2">
                <input type="submit" value="Validate" class="btn btn-success my-2 p-2 px-4" />
            </td>
        </tr>
