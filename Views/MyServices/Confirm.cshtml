@{
    ViewData["Title"] = "Delete Service Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="mb-4" style="font-family: Arialn serif, sans-serif;">Are you sure you want to delete this service?</h1>

            <form asp-action="Confirm" asp-controller="MyServices" method="post" class="mb-3">
                <input type="hidden" value="@ViewData["sId"]" name="sId" />
                <input type="submit" value="Yes" class="btn btn-danger me-2 w-25" />
                <a href="MyServices" class="btn btn-secondary w-25">No</a>
            </form>
        </div>
    </div>
</div>
