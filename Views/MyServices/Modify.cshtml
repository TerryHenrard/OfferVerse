@using OfferVerse.ViewModels
@model CreateModifySPViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Modify Service</h1>
            <form asp-controller="MyServices" asp-action="Modify" method="post">
                <div class="mb-3">
                    <label asp-for="Sp.Title" class="form-label"></label>
                    <input asp-for="Sp.Title" class="form-control" />
                    <span asp-validation-for="Sp.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sp.Description" class="form-label"></label>
                    <input asp-for="Sp.Description" class="form-control" />
                    <span asp-validation-for="Sp.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Categories" class="form-label"></label>
                    <select asp-for="Sp.Category.CategoryId" class="form-select">
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat.CategoryId">@cat.Name</option>
                        }
                    </select>
                </div>

                <input type="hidden" name="sId" value="@Model.Sp.ServiceProvidedId" />

                <div class="d-flex gap-2">
                    <input type="submit" value="Apply" class="btn btn-primary w-25" />
                    <a asp-action="MyServices" class="btn btn-secondary w-25">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
