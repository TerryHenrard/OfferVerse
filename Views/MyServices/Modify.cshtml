@model ServiceProvided

<form asp-controller="MyServices" asp-action="Modify" method="post">
    <table>
        <tr>
            <td>
                <label asp-for="Title"></label>
            </td>
            <td>
                <input asp-for="Title"/>
            </td>
            <td>
                <span asp-validation-for="Title" class="text-danger px-2"></span>
            </td>
        </tr>

        <tr>
            <td>
                <label asp-for="Description"></label>
            </td>
            <td>
                <input asp-for="Description"/>
            </td>
            <td>
                <span asp-validation-for="Description" class="text-danger px-2"></span>
            </td>
        </tr>
        
        <tr>
            <td>
                <select asp-for="Category.CategoryId">
                    @foreach(var cat in ViewBag.categories)
                    {
                        <option value="@cat.CategoryId">@cat.Name</option>
                    }
                </select>
            </td>
        </tr>

        <tr>
            <td>
                <input type="hidden" name="sId" value="@Model.ServiceProvidedId" />
            </td>
        </tr>

        <tr>
            <td>
                <input type="submit" value="Modifier" />
            </td>
        </tr>
    </table>
</form>