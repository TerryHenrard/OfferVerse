@model ServiceProvided

<tr>
    <td><strong>@ViewData["index"]</strong></td>
    <td>@Model.Title</td>
    <td>@Model.Description</td>
    <td>@(Model.Priority ? "Enhanceds" : "Standard")</td>
    <td>
        @if (Model.Priority && Model.DatePriority.HasValue)
        {
            @Model.DatePriority.Value.ToString("dd-MM-yyyy")
        }
        else
        {
            <span class="text-muted">Not prioritized</span>
        }
    </td>
    <td class="d-flex gap-2">
        <a asp-action="Confirm" asp-route-sId="@Model.ServiceProvidedId" class="btn btn-danger">Delete</a>
        <a asp-action="Modify" asp-route-sId="@Model.ServiceProvidedId" class="btn btn-secondary">Modify</a>
        @if (!Model.Priority)
        {
            <a asp-action="Promote" asp-route-sId="@Model.ServiceProvidedId" class="btn btn-primary">Promote</a>
        }
    </td>
</tr>
