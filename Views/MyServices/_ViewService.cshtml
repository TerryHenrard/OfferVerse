@model ServiceProvided

<tr>
    <td>@Model.Title</td>

    <td>@Model.Description</td>

    <td>@Model.Priority</td>

    @if(Model.Priority == true && Model.DatePriority.HasValue)
    {
        <td>@Model.DatePriority.Value.ToString("dd-MM-yyyy")</td>
    }
    else
    {
        <td>Not prioritized</td>
    }

    <td>
        <a asp-action="Confirm" asp-route-sId="@Model.ServiceProvidedId">Delete</a>
    
        <a asp-action="Modify" asp-route-sId="@Model.ServiceProvidedId">Modify</a>
    
        @if(Model.Priority != true)
        {
            <a asp-action="Promote" asp-route-sId="@Model.ServiceProvidedId">Promote</a>
        }
        
    </td>
</tr>