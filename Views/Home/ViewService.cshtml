@model ServiceProvided

@{
    ViewBag.Title = "Service Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="bg-secondary text-white p-4 mb-4">
                <h3>@Model.Title</h3>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.Category.ImagePath" alt="@Model.Category.Name" class="img-fluid mb-3 w-100" />
                </div>
                <div class="col-md-8">
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p>
                        <strong>Priority:</strong> @if (Model.Priority)
                        {
                            <span class="text-warning">Enhanced</span>
                        }
                        else
                        {
                            <span class="text-secondary">Standard</span>
                        }
                    </p>
                    @if (Model.DatePriority.HasValue)
                    {
                        <p><strong>Date Priority:</strong> @Model.DatePriority.Value.ToShortDateString()</p>
                    }
                    <p><strong>User:</strong> @Model.Own.FirstName @Model.Own.LastName</p>
                    <p><strong>Contact:</strong> @Model.Own.Email</p>
                    <p><strong>Category:</strong> @Model.Category.Name</p>
                    <p><strong>Address:</strong> @Model.Own.StreetNumber @Model.Own.StreetName, @Model.Own.City, @Model.Own.PostCode</p>
                    <p><strong>Phone:</strong> @Model.Own.PhoneNumber</p>
                    <p><strong>Global Rating:</strong> @(Model.GlobalRating() != -1 ? Model.GlobalRating() + "/5" : "Not evaluated yet")</p>
                    <p><strong>Commentaries:</strong> Based on @Model.Commentaries.Count @(Model.Commentaries.Count == 1 ? "commentary" : "commentaries")</p>
                </div>
            </div>
            <div class="comment-section">
                <!-- Section pour afficher les commentaires -->
                @if (Model.Commentaries.Any())
                {
                    <h5 class="comment-section-title">Comments:</h5>
                    <ul class="comment-list">
                        @foreach (var comment in Model.Commentaries)
                        {
                            <li class="comment-item alert border">
                                <div class="comment-content">@comment.Content</div>
                                <div class="comment-rating">Rating: @comment.Rating</div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="no-comments-message">No comments yet.</p>
                }
            </div>
            <a asp-action="Index" class="btn btn-back">Back</a>
        </div>
    </div>
</div>
