@{
    string? message = Convert.ToString(ViewData["message"]);
    if (message != null)
    {
        switch (message)
        {
            case "Wrong informations. Please, try again.":
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-danger">Something went wrong.</h4>
                    <p>The email or the password or both informations are wrong. Please, try again.</p>
                    <hr />
                    <p class="mb-0">If you're not able to connect, please report it to <a href="mailto:administrators@offerverse.com">administrators@offerverse.com</a>.</p>
                </div>
                break;

            case "Please, enter some validate inputs.":
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-danger">Error.</h4>
                    <p>Please, enter some validate inputs.</p>
                    <hr />
                    <p class="mb-0">If something is going wrong, please report it to <a href="mailto:administrators@offerverse.com">administrators@offerverse.com</a>.</p>
                </div>
                break;

            case "must be logged in to put in favorite":
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-warning">You must be logged in</h4>
                    <p>Please, log in to put a service in your favorite list</p>
                    <hr />
                    <p class="mb-0">If something is going wrong, please report it to <a href="mailto:administrators@offerverse.com">administrators@offerverse.com</a>.</p>
                </div>
                break;

            case "Added to your favorite":
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-success">Well Done</h4>
                    <p>This service has been successfully added to your favorite list</p>
                    <hr />
                    <p class="mb-0">If the changes do not appear please report it at <a href="mailto:administrators@offerverse.com">administrators@offerverse.com</a>.</p>
                </div>
                break;

            case "The password don't match.":
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-warning">The passwords don't match</h4>
                    <p>The passwords you typed don't match. Please, try again.</p>
                    <hr />
                    <p class="mb-0">If something is going wrong, please report it at <a href="mailto:administrators@offerverse.com">administrators@offerverse.com</a>.</p>
                </div>
                break;

            case "An error has occured.":
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-warning">An error has occured.</h4>
                    <p>An error has occured.. Please, try again.</p>
                    <hr />
                    <p class="mb-0">If something is going wrong, please report it at <a href="mailto:administrators@offerverse.com">administrators@offerverse.com</a>.</p>
                </div>
                break;

            case "The account has been created":
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-success">Well done!</h4>
                    <hr />
                    <p class="my-0">The account has been created.</p>
                </div>
                break;

            case "Successfully connected.":
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Well done!</h4>
                    <hr />
                    <p class="my-0">Successfully connected.</p>
                </div>
                break;

            default:
                break;
        }
    }
}
